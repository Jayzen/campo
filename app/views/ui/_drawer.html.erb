<nav id="drawer" class="drawer drawer-permanent" data-controller="drawer">
  <div class="drawer-content">
    <div class="list">
      <% %w(buttons forms dropdowns toolbars cards dialogs lists snackbars).each do |name| %>
        <a href="#<%= name %>" class="list-item">
          <div class="list-item-content">
            <%= name.capitalize %>
          </div>
        </a>
      <% end %>
    </div>
  </div>
  <div class="drawer-background" data-action="click->drawer#close">
  </div>
</nav>
