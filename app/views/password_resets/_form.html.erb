<%= form_with model: @user, class: 'form', url: password_reset_url(token: params[:token]), id: 'password-reset-form' do |form| %>
  <div class="form-field <%= 'invalid' if @user.errors[:password].any? %>">
    <%= form.label :password %>
    <%= form.password_field :password %>
    <% if @user.errors[:password].any? %>
      <div class="validate-message">
        <%= @user.errors[:password].first %>
      </div>
    <% end %>
  </div>
  <div class="form-field <%= 'invalid' if @user.errors[:password_confirmation].any? %>">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
    <% if @user.errors[:password_confirmation].any? %>
      <div class="validate-message">
        <%= @user.errors[:password_confirmation].first %>
      </div>
    <% end %>
  </div>
  <%= form.submit t('.change_password'), class: 'button button-contained button-primary' %>
<% end %>
