<div class="card">
  <div class="card-header">
    <div class="toolbar">
      <div class="toolbar-title">
        <%= t '.topics' %>
      </div>
      <div class="toolbar-action">
        <a href="<%= new_admin_topic_path %>" class="button button-icon">
          <i class="material-icons">add</i>
        </a>
      </div>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th><%= t '.id' %></th>
        <th><%= t '.title' %></th>
        <th><%= t '.user' %></th>
        <th><%= t '.created_at' %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @topics.each do |topic| %>
        <tr>
          <td><%= topic.id %></td>
          <td><%= topic.title %></td>
          <td><%= topic.user.name %></td>
          <td><%= local_time_or_date topic.created_at %></td>
          <td class="table-action text-align-right">
            <a href="<%= admin_topic_url(topic) %>" class="button button-icon">
              <i class="material-icons">chevron_right</i>
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="card-footer border-top">
    <%= render_paginator @topics %>
  </div>
</div>
